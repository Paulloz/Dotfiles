<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<menu id="system" label="System">
  <item label="Shutdown">
    <action name="Execute">
      <command>poweroff</command>
    </action>
  </item>
  <item label="Reboot">
    <action name="Execute">
      <command>reboot</command>
    </action>
  </item>
  <item label="Logout">
    <action name="Exit" />
  </item>
  <item label="Suspend">
    <action name="Execute">
      <command>pm-suspend</command>
    </action>
  </item>
  <separator />
  <item label="Next wallpaper">
    <action name="Execute">
      <command>sh /home/paulloz/.config/wallpaper/nextWallpaper.sh</command>
    </action>
  </item>
  <item label="Reconfigure Openbox">
    <action name="Reconfigure" />
  </item>
</menu>

<menu id="multimedia" label="Multimedia">
  <item label="Clementine">
    <action name="Execute">
      <command>clementine</command>
      <startupnotify>
	<enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="Vlc">
    <action name="Execute">
      <command>vlc</command>
      <startupnotify>
	<enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="Transmission">
    <action name="Execute">
      <command>transmission-gtk</command>
      <startupnotify>yes</startupnotify>
    </action>
  </item>
</menu>

<menu id="root-menu" label="Openbox 3">
  <item label="Terminal">
    <action name="Execute">
      <command>lxterminal</command>
      <startupnotify>
	<enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="Sublime">
    <action name="Execute">
        <command>/opt/sublime/sublime_text</command>
      <startupnotify>
	<enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="Chrome">
    <action name="Execute">
      <command>google-chrome</command>
      <startupnotify>
	<enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="Firefox">
    <action name="Execute">
      <command>firefox</command>
      <startupnotify>
	<enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="Skype">
    <action name="Execute">
      <command>skype</command>
      <startupnotify>yes</startupnotify>
    </action>
  </item>
  <item label="XChat">
    <action name="Execute">
      <command>xchat</command>
      <startupnotify>yes</startupnotify>
    </action>
  </item>
  <menu id="communication" />
  <menu id="multimedia" />
  <separator />
  <menu id="system"/>
</menu>

</openbox_menu>
